{
  "manifest_version": 2,
  "name": "AdBlocker",
  "version": "1.0",
  "description": "Block ads on YouTube",
  "permissions": ["https://www.youtube.com/"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "AdBlocker"
  }
}
